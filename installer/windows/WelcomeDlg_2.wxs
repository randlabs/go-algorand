<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Fragment>
        <UI>
            <Dialog Id="WelcomeDlg_2" Width="370" Height="270" Title="!(loc.WelcomeDlg_Title)">
                <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)" >
                    <Publish Property="WixUI_InstallMode" Value="Update">Installed AND PATCH</Publish>
                </Control>
                <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
                    <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
                </Control>
                <Control Id="Bitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="234" TabSkip="no" Text="!(loc.WelcomeDlgBitmap)" />
                <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Disabled="yes" Text="!(loc.WixUIBack)" />
                <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
                <Control Id="Description" Type="Text" X="135" Y="45" Width="220" Height="60" Transparent="yes" NoPrefix="yes" 
                Text="This wizard will guide you in the installation of your Algorand Node and companion tools in your system.">
                    <Condition Action="show">NOT Installed OR NOT PATCH</Condition>
                    <Condition Action="hide">Installed AND PATCH</Condition>
                </Control>
                <Control Id="Description2" Type="Text" X="135" Y="85" Width="220" Height="60" Transparent="yes" NoPrefix="yes" 
                Text="Developed by Rand Labs with the support of Algorand Foundation. Follow the links below to visit us.">
                    <Condition Action="show">NOT Installed OR NOT PATCH</Condition>
                    <Condition Action="hide">Installed AND PATCH</Condition>
                </Control>
                <Control Id="Link1" Type="Hyperlink" X="135" Y="120" Width="220" Height="60" Transparent="yes"  >
                    <Text><![CDATA[<a href="https://randlabs.io/">https://randlabs.io/</a>]]></Text>
                </Control>
                <Control Id="Link2" Type="Hyperlink" X="135" Y="140" Width="220" Height="60" Transparent="yes"  >
                    <Text><![CDATA[<a href="www.algorand.com">https://www.algorand.com/</a>]]></Text>
                </Control>
                <Control Id="Title" Type="Text" X="135" Y="20" Width="220" Height="60" Transparent="yes" NoPrefix="yes" Text="{\WixUI_Font_Bigger}Welcome to the Algorand Node Setup" />
            </Dialog>

            <InstallUISequence>
                <Show Dialog="WelcomeDlg_2" Before="ProgressDlg" Overridable="yes">NOT Installed OR PATCH</Show>
            </InstallUISequence>
        </UI>
    </Fragment>
</Wix>