SOURCENAME=algorand-node
OBJ=$(SOURCENAME)-$(NETWORK).wixobj
MSI=$(SOURCENAME)-$(NETWORK).msi
CANDLE=$(WIX)bin\candle.exe
LIGHT=$(WIX)bin\light.exe
GOBINFOLDER=$(HOME)/go/bin
SVCBINFOLDER=../../windows/algodsvc

all: $(OBJ) $(MSI)

$(OBJ): $(SOURCENAME).wxs
	"$(CANDLE)" $(SOURCENAME).wxs -dGOBINFOLDER=$(GOBINFOLDER) -dSVCBINFOLDER=$(SVCBINFOLDER) -dNETWORK=$(NETWORK) -out $(OBJ) -v

$(MSI): $(OBJ)
	"$(LIGHT)" $(OBJ) -out $(MSI) -v

clean:
	@rm -f $(SOURCENAME).wixobj
	@rm -f $(SOURCENAME).wixpdb
	@rm -f $(SOURCENAME).msi





